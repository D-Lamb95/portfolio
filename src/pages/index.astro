---
import Header from "../components/Header.astro";   // if you actually have this component
import Hero from "../components/Hero.astro";       // if you actually have this component
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import Footer from "../components/Footer.astro";

// If your config exports default:
import siteConfig from "../config";

// If your config exports a *named* constant instead, use:
// import { siteConfig } from "../config";

import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- Use a relative path so it works at /portfolio/ on GitHub Pages -->
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={siteConfig.description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{siteConfig.name} - {siteConfig.title}</title>
  </head>
  <body>
    <!-- If you don't actually have Header/Hero yet, remove these two lines -->
    <Header />
    <section>
      <Hero />
      <About />
      <Projects />
      <Experience />
      <Education />
    </section>
    <Footer />
  </body>
</html>
